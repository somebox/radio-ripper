source "https://rubygems.org"

# core
gem "tzinfo"
gem "activesupport", "~> 3.2.0"

# web app
gem "sinatra"
gem "haml"
gem "rerun"     # auto-reload sinatra
gem 'listen', '~> 1.0' # fix for https://github.com/alexch/rerun/pull/45

gem "feedzirra" # RSS
gem "curb"      # http/curl
gem "nokogiri" # HTML parsing
gem "chronic"  # time parsing
gem "moneta"  # cache

# database
gem "sqlite3"
gem 'data_mapper'
gem 'dm-migrations'
gem 'dm-timestamps'
gem 'dm-sqlite-adapter'
gem 'dm-chunked_query'

# testing
gem "rspec"
gem "guard"
gem "guard-rspec"
gem "guard-bundler"

# etc
gem "wirble"
gem "awesome_print"
gem "lunchy"   # util to help with scheduling jobs
